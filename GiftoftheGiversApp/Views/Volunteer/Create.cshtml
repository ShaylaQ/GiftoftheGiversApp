@model GiftoftheGiversApp.Models.Entities.Volunteer

@{
    ViewData["Title"] = "Volunteer";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2 class="text-center mb-4">Volunteer for a Task</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="TaskType" class="form-label"></label>
        <input asp-for="TaskType" class="form-control" />
        <span asp-validation-for="TaskType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Availabilty" class="form-label"></label>
        <input asp-for="Availabilty" class="form-control" type="datetime-local" />
        <span asp-validation-for="Availabilty" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit Availability</button>

    <div class="text-center mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel / Back</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
