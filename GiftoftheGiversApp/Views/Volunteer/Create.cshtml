@model GiftoftheGiversApp.Models.Entities.Volunteer

@{
    ViewData["Title"] = "Become one of our Volunteer";
}

<h2>Become a Volunteer</h2>
<p class="text-muted">Join us in helping others. Fill out the form to register as a volunteer.</p>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TaskType" class="control-label"></label>
        <input asp-for="TaskType" class="form-control" placeholder="e.g. Food distribution, Admin support" />
        <span asp-validation-for="TaskType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Availability" class="control-label"></label>
        <input asp-for="Availability" type="datetime-local" class="form-control" />
        <span asp-validation-for="Availability" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Register</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
